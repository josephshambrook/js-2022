---
// dependencies
import cns from "classnames";

// CSS
import layoutStyles from "@styles/layout.module.scss";

// Components
import SiteHead from "../components/SiteHead.astro";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";
import BlogPost from "../components/BlogPost.astro";

// types
import type { MarkdownLayoutProps } from "astro";
type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

// JS
const { content, frontmatter } = Astro.props;
// console.log("content", content);
// console.log("frontmatter", frontmatter);
const { title, description, publishDate, heroImage, permalink, alt, tags } =
  content;
---

<html lang={content.lang || "en"}>
  <head>
    <SiteHead {title} {description} {permalink} />
  </head>

  <body>
    <Header />
    <div class={cns(layoutStyles.container, layoutStyles["grid--12"])}>
      <main class={layoutStyles.main}>
        <BlogPost {title} {heroImage} {publishDate} {alt} {tags}>
          <slot />
        </BlogPost>
      </main>
    </div>
    <Footer />
  </body>
</html>
