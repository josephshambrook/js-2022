---
// components
import SiteHead from "../components/SiteHead.astro";

// css
import LayoutStyles from "@styles/layouts/layout.module.scss";

// types
import type { SiteMetadata } from "@src/types";

// javascript
const { title, subtitle, description, permalink, lang = "en" } = Astro.props;

// props
export type Props = Partial<SiteMetadata> & {
  lang?: string;
};
---

<html lang={lang}>
  <head>
    <SiteHead
      title={title}
      subtitle={subtitle}
      description={description}
      permalink={permalink}
    />
  </head>

  <body class={LayoutStyles.body}>
    <slot />
  </body>
</html>
