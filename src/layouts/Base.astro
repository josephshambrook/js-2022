---
// components
import SiteHead from "../components/SiteHead.astro";

// javascript
const {
  title = null,
  description = null,
  permalink = null,
  lang = "en",
} = Astro.props;

// props
export type Props = {
  title?: string;
  description?: string;
  permalink?: string;
  lang?: string;
};
---

<html lang={lang}>
  <head>
    <SiteHead title={title} description={description} permalink={permalink} />
  </head>

  <body>
    <slot />
  </body>
</html>
