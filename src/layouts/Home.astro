---
// dependencies
import cns from "classnames";

// styles
import layoutStyles from "@styles/layouts/layout.module.scss";

// components
import Header from "@components/Header.astro";
import Footer from "@components/Footer.svelte";
import Hero from "@components/Hero";

// content
import Base from "./Base.astro";
---

<Base>
  <div class="gradient-bkg">
    <Header isTransparent={true} hasWaves={false} />
    <Hero />
  </div>

  <div class={cns(layoutStyles.container, layoutStyles["grid--12"])}>
    <main class={cns(layoutStyles.main)} id="main">
      <slot name="main" />
    </main>

    <aside class={layoutStyles.aside}>
      <slot name="aside" />
    </aside>
  </div>

  <Footer />
</Base>

<style>
  .gradient-bkg {
    background-image: var(--theme-hero);
    color: white;
    margin-block-end: 3rem;
  }
</style>
